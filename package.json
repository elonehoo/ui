{
  "name": "@elonehoo/ui",
  "type": "module",
  "version": "0.0.0",
  "description": "Starter template for TypeScript library",
  "author": "Elone Hoo <hi@elonehoo.me>",
  "license": "MIT",
  "homepage": "https://github.com/elonehoo/starter-ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/elonehoo/starter-ts"
  },
  "bugs": "https://github.com/elonehoo/starter-ts/issues",
  "keywords": [
    "template",
    "TypeScript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "play": "pnpm -C playground run dev",
    "dev": "unbuild --stub",
    "build": "unbuild",
    "test": "pnpm -C test run test",
    "ui": "pnpm -C test run ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "peerDependencies": {
    "unocss": ">=0.53.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@types/node": "^20.4.2",
    "@vitest/ui": "^0.33.0",
    "bumpp": "^9.1.1",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "unocss": "^0.53.5",
    "vitest": "^0.33.0"
  }
}
