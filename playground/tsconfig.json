{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "es2016",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vite/client",
            "vite-plugin-pages/client",
            "vitest/globals"
        ],
        "paths": {
            "~components/*": [
                "src/components/*"
            ],
            "~composables/*": [
                "src/composables/*"
            ],
            "~pages/*": [
                "src/pages/*"
            ],
            "~styles/*": [
                "src/styles/*"
            ],
            "~/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}